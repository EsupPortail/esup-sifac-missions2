<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<!-- Desktop -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>desktopWelcome</from-outcome>
			<to-view-id>/stylesheets/desktop/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/*</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/stylesheets/desktop/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/*</from-view-id>
		<navigation-case>
			<from-outcome>about</from-outcome>
			<to-view-id>/stylesheets/desktop/about.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/*</from-view-id>
		<navigation-case>
			<from-outcome>help</from-outcome>
			<to-view-id>/stylesheets/desktop/help.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<!-- Mobile -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>mobileWelcome</from-outcome>
			<to-view-id>/stylesheets/mobile/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/mobile/*</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/stylesheets/mobile/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
        <from-view-id>/stylesheets/mobile/*</from-view-id>
        <navigation-case>
            <from-outcome>mission</from-outcome>
            <to-view-id>/stylesheets/mobile/mission.xhtml</to-view-id>
			<redirect />
        </navigation-case>
    </navigation-rule>
	
	<!-- Exceptions -->
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/*</from-view-id>
		<navigation-case>
			<from-outcome>exception</from-outcome>
			<to-view-id>/stylesheets/desktop/exception.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/mobile/*</from-view-id>
		<navigation-case>
			<from-outcome>exception</from-outcome>
			<to-view-id>/stylesheets/mobile/exception.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<!-- Restart -->
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/*</from-view-id>
		<navigation-case>
			<from-outcome>applicationRestarted</from-outcome>
			<to-view-id>/stylesheets/desktop/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/desktop/exception.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>applicationRestarted</from-outcome>
			<to-view-id>/stylesheets/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/mobile/*</from-view-id>
		<navigation-case>
			<from-outcome>applicationRestarted</from-outcome>
			<to-view-id>/stylesheets/mobile/welcome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/stylesheets/mobile/exception.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>applicationRestarted</from-outcome>
			<to-view-id>/stylesheets/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
