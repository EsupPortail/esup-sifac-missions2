<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="sifacService"
		class="org.esupportail.sifacmissions.services.sifac.SifacServiceImpl">
		<property name="mandant" value="${sifac.mandant}" />
		<property name="firstYear" value="${sifac.firstYear}" />
		<property name="portailService" ref="sifacPortailService" />
		<property name="cacheManager" ref="cacheManager" />
		<property name="cacheName" value="ListOfFraisMission" />
	</bean>

	<bean id="sifacPortailService" class="org.esupportail.sifacmissions.ws.SifacPortailService">
		<constructor-arg>
			<value>${sifac.ws.url}</value>
		</constructor-arg>
		<constructor-arg>
			<value>${sifac.ws.login}</value>
		</constructor-arg>
		<constructor-arg>
			<value>${sifac.ws.password}</value>
		</constructor-arg>
		<property name="categorizer">
			<bean class="org.esupportail.sifacmissions.utils.Categorizer">
				<property name="words">
					<util:properties location="classpath:/properties/words.properties" />
				</property>
			</bean>
		</property>
	</bean>

</beans>