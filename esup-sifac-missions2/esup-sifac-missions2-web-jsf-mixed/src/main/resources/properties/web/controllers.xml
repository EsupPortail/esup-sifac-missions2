<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

	<bean id="sessionController"
		class="org.esupportail.sifacmissions.web.controllers.SessionController"
		parent="abstractDomainAwareBean" scope="session">
		<property name="authenticator" ref="authenticator"/>
		<property name="exceptionController" ref="exceptionController"/>
		<property name="version" value="${misc.version}" />
		<property name="site" value="nothing" />
		<property name="casLogoutUrl" value="${cas.url}/logout?service=%s"/>
		<property name="locale" value="${misc.locale}"/>
	</bean>
	
	<bean id="exceptionController"
		class="org.esupportail.sifacmissions.web.controllers.ExceptionController"
		scope="session">
	</bean>

	<bean id="preferencesController"
		class="org.esupportail.sifacmissions.web.controllers.PreferencesController"
		parent="abstractContextAwareController" scope="session">
		<property name="displayAboutLink" value="${view.displayAboutLink}"/>
		<property name="displayHelpLink" value="${view.displayHelpLink}"/>
		<property name="displayMobileLink" value="${view.displayMobileLink}"/>
		<property name="displayServletLink" value="${view.displayServletLink}"/>
	</bean>

	<bean id="welcomeController"
		class="org.esupportail.sifacmissions.web.controllers.WelcomeController"
		parent="abstractContextAwareController" scope="session">
	</bean>

	<bean id="abstractContextAwareController" abstract="true"
		parent="abstractDomainAwareBean" scope="session">
		<property name="sessionController" ref="sessionController" />
	</bean>

</beans>
