<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<bean id="sifacPortailService" class="org.esupportail.sifacmissions.ws.SifacPortailService">
        <constructor-arg><value>${sifac.ws.url}</value></constructor-arg>
        <constructor-arg><value>${sifac.ws.login}</value></constructor-arg>
        <constructor-arg><value>${sifac.ws.password}</value></constructor-arg>
        <property name="categorizer">
        	<bean class="org.esupportail.sifacmissions.utils.Categorizer">
        		<property name="words">
		            <util:properties location="classpath:/properties/words.properties"/>
		        </property>
        	</bean>
        </property>
    </bean>

</beans>